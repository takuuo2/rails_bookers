<h1>Books</h1>
<% @books.each do |book| %>
<p>title</p>
<span>
  <%= book.title %>
  <%= book.body %>
  <%= link_to "Show", book_path(book.id) %>
  <%= link_to "Edit",edit_book_path(book.id) %>
  <%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %>
  </span>
<% end %>


<h4>New book</h4>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book'%>
<% end %>