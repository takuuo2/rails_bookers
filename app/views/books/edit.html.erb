<body>

  <head>
    <% stylesheet_link_tag "edits", :media => "all" %>
  </head>

  <h1>Editing Book</h1>
    <% if @book.errors.any? %>
        <div class="error">
          <h2>1 error prohibited this book from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li class="error-li"><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>



  <%= form_with model: @book do |f| %>
    <div>
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>

    <div>
      <label>Body</label><br>
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Update Book' %>

    <p class="edit">
    <%= link_to "Show",book_path(@book.id) %>
    |
    <%= link_to "Back", "/books" %>
    </p>

  <% end %>
</body>